  "description": "Authenticate, sign and send transactions and messages on the Elrond blockchain in the browser.",
  "type": "module",
  "types": "build/types/elven.d.ts",
  "main": "build/elven.js",
  "browser": {
    ".": "./build/elven.js"
  },
  "exports": "./build/elven.js",
  "author": "Julian Ä†wirko <julian.io>",
  "license": "MIT",
  "homepage": "https://www.elvenjs.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/juliancwirko/elven.js"
  },
  "keywords": [
    "elrond",
    "blockchain",
    "sdk",
    "javascript",
    "browser"
  ],
  "scripts": {
