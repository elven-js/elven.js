{
  "include": [
    "src/**/*"
  ],
  "compilerOptions": {
    "strict": true,
    "target": "ES2020",
    "module": "ES2020",
    "declaration": true,
    "declarationDir": "./build/types",
    "emitDeclarationOnly": true,
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "types": [
      "node"
    ],
    "skipLibCheck": true,
    "importHelpers": false
  }
}